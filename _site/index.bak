            .hero-subtitle {
                font-size: 1.2rem;
            }

            .hero-description {
                font-size: 1rem;
            }

            .projects h2,
            .experience h2 {
                font-size: 2rem;
            }

            .carousel-container {
                gap: 12px;
            }

            .carousel-arrow {
                width: 45px;
                height: 45px;
                font-size: 1.5rem;
            }

            .carousel-slide {
                min-width: 100%;
